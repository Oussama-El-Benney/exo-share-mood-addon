<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>share-mood-addon</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- Extension war -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>webapps</outputDirectory>
      <includes>
        <include>${project.groupId}:share-mood-webapp:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>share-mood-webapp.war</outputFileNameMapping>
    </dependencySet>
      <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>webapps</outputDirectory>
      <includes>
        <include>${project.groupId}:share-mood-portlets:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>share-mood-portlets.war</outputFileNameMapping>
    </dependencySet>
    <!-- Libraries -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>${project.groupId}:share-mood-services:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>share-mood-services.jar</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
